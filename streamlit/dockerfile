FROM python:3.11-slim

WORKDIR /app

COPY requirements.txt .

# Install dependencies (including Streamlit + embeddings model support)
RUN pip install --no-cache-dir -r requirements.txt

COPY /scripts/insert_lancedb.py /app/

EXPOSE 8501

CMD ["streamlit", "run", "insert_lancedb.py", "--server.address=0.0.0.0"]
